# Configuración del servidor
PORT=3001
NODE_ENV=development

# Orígenes permitidos para CORS (separados por comas)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Configuración de Power BI
TENANT_ID=your-tenant-id
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret
POWER_BI_USERNAME=your-powerbi-username
POWER_BI_PASSWORD=your-powerbi-password

# Configuración de autenticación
JWT_SECRET=your-very-secure-jwt-secret-key-change-this-in-production
SESSION_SECRET=your-session-secret-key

# URLs de aplicación
FRONTEND_URL=http://localhost:5173
CALLBACK_URL=http://localhost:3001/auth/callback/microsoft

# Configuración de base de datos
DATABASE_PATH=./powerbi.db

# ⚠️ IMPORTANTE: NUNCA subas el archivo .env a Git
# ⚠️ Usa credenciales diferentes para desarrollo y producción
# ⚠️ Cambia las credenciales regularmente
